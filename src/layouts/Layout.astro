---
interface Props {
  title: string;
  showNav?: boolean;
  showFooter?: boolean;
}

const { title, showNav = true, showFooter = true } = Astro.props;
import { Icon } from "astro-icon/components";

import config from "../config.json";

import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={config.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- {showNav && <Nav />}
    <slot />
    {showFooter && <Footer />} -->
    <div
      class="w-full gap-8 h-screen bg-black flex flex-col items-center justify-center overflow-hidden"
    >
      <h1
        class="text-white text-6xl max-md:text-4xl text-center uppercase italic font-bold font-mono"
      >
        Website under construction
      </h1>
      <nav class="flex text-white gap-2">
        {
          config.socials.map((social) => (
            <a href={social.url} target="_blank">
              <Icon
                name={social.icon}
                class="text-4xl hover:text-primary transition"
              />
            </a>
          ))
        }
        <a href={`mailto:${config.mail}`}>
          <Icon
            name="mdi:email"
            class="text-4xl hover:text-primary transition"
          />
        </a>
      </nav>
    </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
