---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImg from "../assets/images/hero.jpg";
import testimonials from '../data/testimonials.json';
---
<Layout title="Testimonials">
  <section class="min-h-screen w-full relative bg-black flex flex-col items-center justify-center py-20">
    <Image
      src={heroImg}
      alt="hero"
      class="w-full h-full object-cover absolute top-0 left-0 grayscale opacity-50"
    />
    <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
      <h1 class="uppercase text-5xl sm:text-6xl md:text-8xl text-white font-extrabold mb-4 tracking-tight">Testimonials</h1>
      <p class="text-3xl md:text-4xl text-primary font-medium leading-tight">See the results we get for our clients.</p>
    </div>
  </section>

  <section id="testimonials" class="py-20 bg-gradient-to-b from-gray-100 to-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        {testimonials.testimonials.map((testimonial) => (
          <div class="bg-white   ">
            <div class="p-8">
              <h2 class="text-2xl font-bold mb-4 text-gray-800">{testimonial.name}</h2>
              <p class="text-gray-600 leading-relaxed">{testimonial.content}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="mt-20 max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <Image
          src={heroImg}
          alt="Testimonial image 1"
          class="w-full h-64 object-cover rounded-lg shadow-md transition-all duration-300 hover:shadow-xl"
        />
        <Image
          src={heroImg}
          alt="Testimonial image 2"
          class="w-full h-64 object-cover rounded-lg shadow-md transition-all duration-300 hover:shadow-xl"
        />
        <Image
          src={heroImg}
          alt="Testimonial image 3"
          class="w-full h-64 object-cover rounded-lg shadow-md transition-all duration-300 hover:shadow-xl"
        />
      </div>
    </div>

    <div class="max-w-3xl mx-auto px-4 mt-20">
      <p class="text-right font-light text-2xl md:text-3xl text-gray-700 leading-relaxed">
        Learn when to push yourself and when
        you might be falling into a victim
        mindset. Share your problems to lighten
        the load. Avoid self-deception and make
        a genuine commitment to personal
        growth.
      </p>
    </div>
  </section>
</Layout>