---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import Alert from "../components/Alert";

const { cookies, redirect } = Astro;

const error = Astro.url.searchParams.get("error") || "";
const status = Astro.url.searchParams.get("status") || "";
---

<Layout title="Login">
  <Alert error={error} status={status} />
  <section
    class="h-screen bg-black w-full flex justify-center items-center px-4"
  >
    <form
      action="/api/auth/register"
      method="post"
      class="max-w-sm w-full mx-auto bg-base-200 p-10 flex flex-col gap-8"
    >
      <h1 class="text-center font-bold text-4xl uppercase">Register</h1>
      <div class="flex flex-col gap-1">
        <label
          class="input input-bordered flex items-center gap-2 max-md:text-sm"
        >
          First Name
          <input
            id="fname"
            name="fname"
            type="text"
            class="grow"
            required
            placeholder="Alex"
          />
        </label>
        <label
          class="input input-bordered flex items-center gap-2 max-md:text-sm"
        >
          Last Name
          <input
            id="lname"
            name="lname"
            type="text"
            class="grow"
            required
            placeholder="Murphy"
          />
        </label>
        <label
          class="input input-bordered flex items-center gap-2 max-md:text-sm"
        >
          Email
          <input
            id="email"
            name="email"
            type="email"
            class="grow"
            required
            placeholder="RoboCop@ocp.com"
          />
        </label>
        <label
          class="input input-bordered flex items-center gap-2 max-md:text-sm"
        >
          Password
          <input
            name="password"
            id="password"
            type="password"
            class="grow"
            required
            placeholder="•••••••••"
          />
        </label>
      </div>
      <div class="flex flex-col gap-4">
        <button type="submit" class="btn btn-primary btn-sm mx-auto"
          >SUBMIT</button
        >
        <h1 class="flex gap-1 text-sm mx-auto">
          <span>Already have an account?</span><a
            href="/login"
            class="w-fit link link-primary">Log in here</a
          >
        </h1>
      </div>
    </form>
  </section>
</Layout>
