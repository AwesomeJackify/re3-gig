---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";
import DashboardComponent from "../components/Dashboard";
import AdminDashboard from "../components/AdminDashboard";

const { data: sessionData, error: sessionError } =
  await supabase.auth.setSession({
    refresh_token: Astro.cookies.get("sb-refresh-token")?.value || "",
    access_token: Astro.cookies.get("sb-access-token")?.value || "",
  });

const currentUserId = (await supabase.auth.getSession()).data.session?.user.id;

const { data: roleData, error: roleError } = await supabase
  .from("roles")
  .select()
  .eq("user_id", currentUserId)
  .single();

const name = sessionData.user?.user_metadata.first_name || "User";
---

<Layout title={`Hey, ${name}`} showNav={false} showFooter={false}>
  {
    roleData?.role === "admin" ? (
      <AdminDashboard client:load currentUserId={currentUserId} name={name} />
    ) : (
      <DashboardComponent
        client:load
        currentUserId={currentUserId}
        name={name}
      />
    )
  }
</Layout>
