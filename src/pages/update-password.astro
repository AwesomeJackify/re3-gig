---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import Alert from "../components/Alert";

const error = Astro.url.searchParams.get("error") || "";
const status = Astro.url.searchParams.get("status") || "";
const success = Astro.url.searchParams.get("success") || "";

import { supabase } from "../lib/supabase";
---

<Layout title="Login">
  <Alert error={error} status={status} success={success} />
  <section
    class="h-screen bg-black w-full flex justify-center items-center px-4"
  >
    <form
      action="/api/auth/reset-password"
      method="post"
      class="max-w-screen-sm mx-auto bg-base-200 p-10 flex flex-col gap-8"
    >
      <h1 class="text-center font-bold text-4xl uppercase">
        Update your password
      </h1>
      <div class="flex flex-col gap-1">
        <label class="input input-bordered flex items-center gap-2">
          Password
          <input
            name="password"
            id="password"
            type="password"
            class="grow"
            required
            placeholder="•••••••••"
          />
        </label>
      </div>
      <div class="flex flex-col gap-4">
        <button type="submit" class="btn btn-primary btn-sm mx-auto"
          >ENTER</button
        >
      </div>
    </form>
  </section>
</Layout>
